FROM parrotsec/security:latest

ENV DEBIAN_FRONTEND=noninteractive

# Install updates and common utilities
RUN dpkg --add-architecture i386 && \
    apt-get update && \
    apt-get dist-upgrade -y && \
    apt-get install -y \
    ftp \
    ltrace \
    moreutils \
    nfs-common \
    strace \
    wine32

COPY config /
ENTRYPOINT /entrypoint.sh
